    for(j=0;j<4;j++){
      linha=MZ[2][0]+MZ[2][1]+MZ[2][2]+MZ[2][3];
	      }
	  }
	      printf("\n a soma de  total de teceira linha e %d",linha);
                    
    for(i=0;i<4;i++)
