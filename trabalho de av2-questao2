#include<stdio.h>
#include<stdlib.h>
#include<string.h>
int main()
{
	char palavra[10],letra;
	 int i,tam,soma=0;
	printf("entre com um palavra:");
	gets(palavra);
	tam=strlen(palavra);
	printf("entre com uma letra:");
	scanf("%c",&letra);
	for(i=0;i<10;i++)
	{
	if(letra== palavra[i])
	{
		soma=soma+1;
	}
   }
   printf("\n numero de vezes=%d",soma);
	system("pause");
	return 0;
	
}
